
@{
    ViewData["Title"] = "Add a Movie";
}

@model PBMission4.Models.MovieSubmitModel

<h1>This is where you can submit a movie!</h1>

<!--Form for movie submission-->
<div>
    <form id="MovieSubmit" method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" /><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" /><br />

        <button id="MovieSubmit" type="submit">Submit Movie</button>

        <!--This is supposed to check for errors in the data validation-->
        <div asp-validation-summary="All"></div>
    </form>
</div>